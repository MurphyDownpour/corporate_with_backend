@model CorporateWithBackend.ViewModels.NewProjectViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Project", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(m => m.Project.file_id)
    @Html.HiddenFor(m => m.Project.Id)
    <div class="form-group">
        <label>Name:</label><br/>
        @Html.EditorFor(m => m.Project.name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Category:</label><br/>
        @Html.DropDownListFor(m => m.Project.category_id, new SelectList(Model.Categories, "Id", "Name"))
    </div>
    <div class="form-group">
        <label>Description:</label><br/>
        @Html.TextAreaFor(m => m.Project.description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Image: </label>
        <input type="file" name="upload"/>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}

@section Styles{
    <link href="~/Content/project.css" rel="stylesheet"/>
}